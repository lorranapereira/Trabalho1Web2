<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trabalho 1</title>
    <!-- Incluindo Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Incluindo Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <!-- Nome do aluno -->
        <div class="d-flex justify-content-center mb-4">
            <h2 class="font-weight-bold">Trabalho Web 2</h2>
        </div>

        <!-- Botão de adição de usuário -->
        <div class="d-flex justify-content-center mb-1">
            <a id="user" class="btn btn-dark btn-md mr-1" href="/add">
                <i class="fas fa-user-plus"></i> Adicionar Usuário
            </a>
            <div class="d-flex justify-content-center">
                <a id="export-csv" class="btn btn-primary btn-md mr-1" href="/export/csv"><i class="fas fa-file-export"></i> Exportar CSV</a>
            </div>
        </div>
        <br/>
        <!-- Tabela de Usuários -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-primary">
                    <tr>
                        <th class="text-center">ID</th>
                        <th>Tipo</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>CPF</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td class="text-center"><%= user.id %></td>
                            <td><%= user.type %></td>
                            <td><%= user.name %></td>
                            <td><%= user.primary_email %></td>
                            <td><%= user.primary_phone %></td>
                            <td><%= user.cpf %></td>
                            <td class="text-center">
                                <a class="btn btn-warning btn-sm mx-1" href="/edit/<%= user.id %>">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm mx-1" href="/remove/<%= user.id %>">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
